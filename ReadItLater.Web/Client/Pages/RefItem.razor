
<div class="item">
    <img src="@Item.Image">
    <div class="info">
        <div class="settings">
            <div class="left">
                @DotsIcon(((int)Item.Priority) + 1)
                <p class="item-date">@Item.Date</p>
            </div>
            <div>
                <i class="fa fa-sliders" @onclick="EditRef"></i>
                <i class="fa fa-share-square-o" @onclick="ShareRef"></i>
            </div>
        </div>
        <p class="item-title"><a href="@Item.Url" target="_blank" @onclick="RefView">@Item.Title</a></p>
        <div class="item-tags">
            @if (Item.Tags != null)
            {
                foreach (var item in Item.Tags)
                {
                    <p class="item-tag" @onclick="(e => ChooseTag(item.Id))">#@item.Name</p>
                }
            }
        </div>
    </div>
</div>