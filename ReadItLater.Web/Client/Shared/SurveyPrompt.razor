@using ReadItLater.Data

<div class="item">
    <img src="@Item.Image">
    <div class="info">
        <p class="item-date">@Item.Date</p>
        <p class="item-title">@Item.Title</p>
        <div class="item-tags">
            @foreach (var item in Item.Tags)
            {
                <p class="item-tag">#@item.Name</p>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Ref Item { get; set; }
}
